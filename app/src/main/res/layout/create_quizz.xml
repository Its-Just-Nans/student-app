<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListQuizz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CrÃ©er un quiz"
                android:textAlignment="center"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:minHeight="16dp"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/create_quiz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_quiz_ph_description"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/create_quiz_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/create_quiz_lesson_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/create_quiz_lesson_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions 1"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/create_quiz_questions_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <RadioGroup
                android:id="@+id/radioGroup_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/create_quiz_responses_0_0"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/create_quiz_ph_reponses"
                        android:inputType="textPersonName" />

                    <RadioButton
                        android:id="@+id/radioButton_0_0"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/create_quiz_responses_0_1"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/create_quiz_ph_reponses"
                        android:inputType="textPersonName"
                        android:orientation="vertical" />

                    <RadioButton
                        android:id="@+id/radioButton_0_1"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/create_quiz_responses_0_2"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/create_quiz_ph_reponses"
                        android:inputType="textPersonName"
                        android:orientation="vertical" />

                    <RadioButton
                        android:id="@+id/radioButton_0_2"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/create_quiz_responses_0_3"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/create_quiz_ph_reponses"
                        android:inputType="textPersonName" />

                    <RadioButton
                        android:id="@+id/radioButton_0_3"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </RadioGroup>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/create_quiz_responses_2_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <RadioButton
                    android:id="@+id/radioButton_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/create_quiz_responses_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </RadioGroup>

            <EditText
                android:id="@+id/create_quiz_questions_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/create_quiz_responses_2_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <RadioButton
                    android:id="@+id/radioButton_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/create_quiz_responses_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>